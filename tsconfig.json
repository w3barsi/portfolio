{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "include": [
      "./src/*" 
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@sections/*": [
        "src/sections/*"
      ],
      "@api/*": [
        "src/pages/api/*"
      ],
      "@appTypes/*": [
        "src/types/*"
      ]
    }
  }
}
